<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://kit.fontawesome.com/80b886b6bd.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="bg-gradient-to-r from-sky-500 via-blue-500 to-sky-600">
        <img src="~/CSS/Brand Assets Download (5211428e-31a0-43c8-8a4c-d64fb34a3724)/Logo Files/For Web/png/Color logo - no background.png" alt="Polizia di stato" style="width:100%; height:230px;" class="" />
    </div>
    <nav class="navbar navbar-expand-lg bg-gradient-to-r from-sky-500 via-blue-500 to-sky-600 roundcstm">
        <div class="container-fluid mx-4">
            <a class="navbar-brand text-zinc-800 d-inline-flex" href="/Home/Home">
                <img src="~/CSS/Logo Files/For Web/png/Color logo - no background.png" alt="Police" style="height:40px" class="mx-2" /> 
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                <ul class="navbar-nav">

                    <li class="nav-item hover:animate-pulse">
                        <a class="nav-link active text-neutral-100" aria-current="page" href="/Home/Home"><i class="fab fa-searchengin"></i> Report </a>

                    </li>
                    
                    <li class="nav-item hover:animate-pulse dropdown btn-group">
                        <a class="nav-link text-neutral-300" href="/Denuncia/Home"><i class="fas fa-scroll"></i> Denuncie </a>
                        <button class="dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/Denuncia/Create">Nuova Denuncia</a></li>
                            <li><a class="dropdown-item" href="/Denuncia/CardHome">Denuncie Card </a></li>

                        </ul>
                    </li>
                    
                    <li class="nav-item hover:animate-pulse dropdown btn-group">
                        <a class="nav-link text-neutral-200" href="/Cittadino/Home">
                            <i class="fas fa-user-friends"></i>
                            Cittadini
                        </a>
                        <button class="dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/Cittadino/NewCittadino">Nuovo Cittadino</a></li>
                            <li><a class="dropdown-item" href="/Cittadino/NewAgente">Registra Nuovo Agente </a></li>

                        </ul>
                    </li>
                    
                    <li class="nav-item hover:animate-pulse dropdown btn-group">
                        <a class="nav-link text-neutral-100 anclist" href="/Oggetto/Home"><i class="fas fa-gem"></i> Oggetti </a>
                        <button class="dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/Oggetto/NewOggetto">Nuovo Oggetto</a></li>
                            @*<li><a class="dropdown-item" href="/Denuncia/CardHome">Denuncie Card </a></li>*@

                        </ul>
                    </li>
                </ul>
            </div>
            <div class="d-flex justify-content-end">
                @if (User.Identity.IsAuthenticated)
                {
                    string Saluto;
                    if (DateTime.Now.Hour > 6 || DateTime.Now.Hour < 15)
                    {
                        Saluto = "Buonasera";
                    }
                    else
                    {
                        Saluto = "Buon Giorno";
                    }

                    <div class="box-2">
                        <a href="/Home/Logout">
                            <div class="btn btn-two">
                                <span>
                                    LOGOUT
                                </span>
                            </div>
                        </a>

                        <p class="hover:animate-pulse">@Saluto @User.Identity.Name.ToUpper()</p>
                    </div>
                }
                else
                {
                    <div class="justify-content-end">
                        <a class="bg-gradient-to-r text-neutral-100 btn to-emerald-600 from-emerald-700 px-4 shadow" href="/Home/Login"> Login </a>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Progetto Finale Sviluppato da Anwar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
